{
  "name": "natours",
  "version": "1.0.0",
  "description": "Natural tuours project",
  "main": "index.js",
  "scripts": {
    "start": "gulp",
    "watch:sass": "node-sass scss/main.scss css/main.css -w",
    "compile:sass": "node-sass scss/main.scss css/main.comp.css",
    "concat:css": "concat -o css/main.concat.css css/main.comp.css css/icon-font.css ",
    "prefix:css": "postcss --use autoprefixer -o css/main.prefix.css css/main.concat.css",
    "compress:css": "node-sass css/main.prefix.css css/main.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Tan Bui",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.4.3",
    "browser-sync": "^2.26.3",
    "concat": "^1.0.3",
    "gulp": "^3.9.1",
    "gulp-sass": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1"
  },
  "dependencies": {}
}
